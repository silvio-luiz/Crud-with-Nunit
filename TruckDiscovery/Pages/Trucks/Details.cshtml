@page
@model TruckDiscovery.Pages.Trucks.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Truck</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Truck.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Truck.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Truck.FabYear.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Truck.FabYear.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Truck.ModelYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Truck.ModelYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Truck.Enrollments)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Truck Model</th>
                </tr>
                @foreach (var item in Model.Truck.Enrollments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TruckModel)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Truck?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
